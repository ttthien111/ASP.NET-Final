@{ 
    ESHOPContext db = new ESHOPContext();
    List<HoaDon> hoaDons_moi = db.HoaDon.Where(p => p.NgayDat.Date == DateTime.Now.Date && p.MaTrangThai == 0).ToList();
    List<HoaDon> hoaDons_ngay = db.HoaDon.Where(p => p.NgayDat.Date == DateTime.Now.Date).ToList();
    List<HoiDap> phanhoi_ngay = db.HoiDap.Where(p => p.NgayDua.Date == DateTime.Now.Date).ToList();
    List<HoiDap> phanhois = db.HoiDap.ToList();
    List<KhachHang> khachHangs = db.KhachHang.ToList();
    List<HoaDon> hoaDons = db.HoaDon.ToList();
    double hoaDons_doanhthu = Convert.ToDouble(db.HoaDon.Sum(p => p.TongThucThu));
}
