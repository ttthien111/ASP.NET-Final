@model ASPCore_Final.Models.TinTuc

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Cập nhật thông tin</h2>

<h4>Tin tức</h4>
<hr />
<script src="~/Admin/js/plugins/ckeditor.js"></script>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaTt" />
            <div class="form-group">
                <label asp-for="NoiDung" class="control-label"></label>
                <textarea asp-for="NoiDung" class="form-control" id="txtNoiDung"></textarea>

                <script>
                    var editor = CKEDITOR.replace('txtNoiDung');

                </script>
                <span asp-validation-for="NoiDung" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgayTao" class="control-label"></label>
                <input asp-for="NgayTao" class="form-control" />
                <span asp-validation-for="NgayTao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaNv" class="control-label"></label>
                <select asp-for="MaNv" class="form-control" asp-items="ViewBag.MaNv"></select>
                <span asp-validation-for="MaNv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoaiTt" class="control-label"></label>
                <select asp-for="LoaiTt" class="form-control" asp-items="ViewBag.LoaiTt"></select>
                <span asp-validation-for="LoaiTt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrangThai" class="control-label"></label>
                <input asp-for="TrangThai" class="form-control" />
                <span asp-validation-for="TrangThai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-default">Trở lại</a>
</div>

