@model ASPCore_Final.Models.Voucher

@{
    ViewData["Title"] = "Sua";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="outer-w3-agile mt-3">
    <h2>Sửa</h2>

    <h4>Voucher</h4>
    <hr />
    @if (Context.Session.Get<string>("loi") != null)
    {
        var loi = Context.Session.Get<string>("loi");
        <span class="alert alert-danger">@loi</span>
    }
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Sua">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="MaVc" type="hidden" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="NoiDung" class="control-label"></label>
                    <input asp-for="NoiDung" class="form-control" />
                    <span asp-validation-for="NoiDung" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="NgayTao" type="hidden" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="NgayBatDau" class="control-label"></label>
                    <input asp-for="NgayBatDau" class="form-control" />
                    <span asp-validation-for="NgayBatDau" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NgayHetHan" class="control-label"></label>
                    <input asp-for="NgayHetHan" class="form-control" />
                    <span asp-validation-for="NgayHetHan" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GiamGia" class="control-label"></label>
                    <input asp-for="GiamGia" class="form-control" />
                    <span asp-validation-for="GiamGia" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TongTienDk" class="control-label"></label>
                    <input asp-for="TongTienDk" class="form-control" />
                    <span asp-validation-for="TongTienDk" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Lưu chỉnh sửa" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</div>