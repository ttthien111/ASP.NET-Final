@model ASPCore_Final.Models.ChangePassword
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_frontEnd.cshtml";
}
@section breadcumb{
    <div class="breadcrumbs">
        <div class="container">
            <ol class="breadcrumb breadcrumb1 animated wow slideInLeft" data-wow-delay=".5s">
                <li><a asp-controller="Home" asp-action="Index"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>Trang chủ</a></li>
                <li class="active">Đổi mật khẩu</li>
            </ol>
        </div>
    </div>
}
<div class="forgot">
    <div class="container">
        <div class="login-form-grids animated wow slideInUp" data-wow-delay=".5s">
            <h3 class="animated wow zoomIn" style="text-align:center;">Đổi mật khẩu</h3>
            <form method="post" asp-controller="ChangePassword" asp-action="Change">
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                <input asp-for="MatKhauMoi" type="password" placeholder="Mật khẩu mới" required>
                <input asp-for="XacNhanMatKhauMoi" type="password" placeholder="Xác nhận mật khẩu mới" required>
                <input type="submit" value="Xác nhận">
            </form>
        </div>
    </div>
</div>

